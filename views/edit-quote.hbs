<div class="container">
    <div class="page-header">
        <h1>âœï¸ Edit Quote</h1>
        <a href="/" class="btn btn-secondary">â† Back to Quotes</a>
    </div>

    <form action="/quotes/{{quote.id}}/edit" method="POST" class="quote-form">
        <div class="form-group">
            <label for="quoteText">Quote *</label>
            <textarea 
                id="quoteText" 
                name="quoteText" 
                rows="4" 
                required
            >{{quote.quoteText}}</textarea>
        </div>

        <div class="form-group">
            <label for="personName">Who said it? *</label>
            <input 
                type="text" 
                id="personName" 
                name="personName" 
                value="{{quote.personName}}"
                required
            >
        </div>

        <div class="form-group">
            <label for="location">Where did this happen?</label>
            <input 
                type="text" 
                id="location" 
                name="location"
                value="{{quote.location}}"
            >
        </div>

        <div class="form-group">
            <label for="date">Date</label>
            <input 
                type="date" 
                id="date" 
                name="date"
                value="{{quote.date}}"
            >
        </div>

        <button type="submit" class="btn btn-primary btn-large">ğŸ’¾ Update Quote</button>
    </form>
</div>